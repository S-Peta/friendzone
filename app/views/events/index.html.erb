<div class="flex-row container pack-grid">
  <% @events.each do |event| %>
    <div class="card-index event-card">
      <div class="head-card shimmer">
        <!-- You can modify this part based on your requirements -->
        <span class="rate">4.5/5</span>
      </div>
      <div class="img-mask">
        <% if event.photo.attached? %>
          <%= cl_image_tag event.photo.key, alt: event.name %>
        <% else %>
          <img src="https://www.shutterstock.com/image-vector/picture-icon-260nw-413647060.jpg" alt="">
        <% end %>
      </div>
      <div class="card-content-index">
        <div class="card-header">
          <h2 class="title-index"><%= event.name %></h2>
        </div>
        <p class="description-index"><%= event.event_date %></p>
        <% if event.user == current_user %>
          <h4 class="description-index"><%= link_to 'Details', event_chat_path(event), class: 'custom-btn friend-btn' %></h4>
        <% else %>
          <h4 class="description-index"><%= link_to 'Details', event_path(event), class: 'custom-btn friend-btn' %></h4>
        <% end %>
      </div>
    </div>
  <% end %>
</div>



