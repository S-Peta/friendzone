<div class="container">
  <div class="pack-grid">
    <% @events.each do |event| %>
      <div class="event-card">
         <% if event.photo.attached? %>
           <%= cl_image_tag event.photo.key, height: 300, crop: :fill %>
         <% else %>
           <img src="https://www.shutterstock.com/image-vector/picture-icon-260nw-413647060.jpg"/>
         <% end %>
        <div class="card-info text-center">
          <% if event.user == current_user %>
            <h4><%= link_to event.name, event_chat_path(event) %></h4>
          <% else %>
            <h4><%= link_to event.name, event_path(event) %></h4>
          <% end %>
          <p><%= event.event_date %></p>
          <%= link_to 'Details', event_chat_path(event), class: 'custom-btn friend-btn' %>
        </div>
      </div>
    <% end %>
