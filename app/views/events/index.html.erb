<div>
  <div class="banner" data-navbar-target="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1496208612508-eb52fba7d94e?q=80&w=2080&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
    <div class="container box-banner">
      <%= image_tag 'logo-white.png', class: "logo-home" %>
      <h3>Find your people</h3>
      <hr>
      <%= form_with url: filter_events_path, method: :get, class: "d-flex flex-column" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            style: "width: 300px",
            placeholder: "Type a keyword"
      %>
      <%= submit_tag "Search", name: "", class:"btn btn-outline-light w-100 mt-3" %>
    <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="cards-category">
    <% @events.each do |event| %>
    <div class="card-city">
      <%= link_to event_path(event) do %>
        <h2><%= event.location %></h2>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="inner-banner">
  <div class="div">
    carousel
  </div>
</div>

<div class="container">
  <div class="pack-grid">
    <% @events.each do |event| %>
      <div class="card" style="width: 18rem;">
        <img src="https://www.shutterstock.com/image-vector/picture-icon-260nw-413647060.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <% if event.user == current_user %>
            <h2 class="card-title"><%= link_to event.name, event_chat_path(event) %></h2>
          <% else %>
            <h2 class="card-title"><%= link_to event.name, event_path(event) %></h2>
          <% end %>
          <p class="card-text"><%= event.event_date %></p>
          <p class="card-text"><%= event.location %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
