<div class="page-event">
  <div class="row">
    <div class="col-3">
      <div class="filter-show-page">
        <%# <%= render "shared/filter" %>
      </div>
    </div>
    <div class="col-9">
      <div class="upcoming-event-list">
        <table>
          <tr>
            <td>
              <div class="month"><%# l(@event.event_date, format: '%b').slice(0, 3) %></div>
              <div class="month-date-devider"></div>
              <div class="date"><%# l(@event.event_date, format: '%d')%></div>
            </td>
        </table>
      </div>
      <div class="">
        <% if @event.photo.attached?  %>
          <%= cl_image_tag @event.photo.key, height: 500, crop: :fill %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1475721027785-f74eccf877e2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTJ8fGV2ZW50fGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60"/>
        <% end %>
      </div>
      <div class="">
        <h1 class="title"><%= @event.name %></h1>
        <div class="venue">
          <table>
            <tr>
              <td><i class="fa fa-map-marker p-1"></i></td>
              <td>
                <div><%= @event.location %></div>
              </td>
            </tr>
          </table>
        </div>
        <div class="time">
          <table>
            <tr>
              <td><i class="fa-solid fa-calendar-days p-1"></i></td>
              <td>
                <div><%# l(@event.event_date, format: '%A, %b %d, %Y') %></div>
                <div data-livestamp="1517054400" class="dim-color"></div>
              </td>
            </tr>
          </table>
        </div>
        <%= simple_form_for [@event, @participant] do |f| %>
          <%= f.submit 'Join this event', class: "btn btn-primary mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
