<div class="container">
  <%= simple_form_for @event do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :category, collection: Event::CATEGORY %>
    <%= f.input :event_date %>
    <%= f.input :period, collection: Event::PERIOD %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit %>
  <% end %>
</div>
