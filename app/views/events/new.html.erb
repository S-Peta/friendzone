<div class="wrapper wrapper-edit">
  <div class="new-event">
    <blockquote>
      <p>
        "It is very rare or impossible that an event can be negative from all points of view."
      </p>
      <p class="author">- Dalai Lama</p>
    </blockquote>
  </div>

  <div class="form-wrapper">
    <h1 class="form-title">New event</h1>

    <%= simple_form_for @event do |f| %>

      <div class="form-group">
        <%= f.input :name, input_html: { class: 'w-100' }, wrapper_html: { class: 'd-flex flex-column align-items-center' }%>
        <span class="check-icon"></span>
      </div>

      <div class="form-group">
        <%= f.input :location, input_html: { class: 'w-100', title: 'Enter your password', type: 'password' }, wrapper_html: { class: 'd-flex flex-column align-items-center' } %>
        <span class="check-icon"></span>
      </div>

      <div class="form-group">
        <%= f.input :category, collection: Event::CATEGORY, input_html: { class: 'w-100', title: 'Enter your password', type: 'password' }, wrapper_html: { class: 'd-flex flex-column align-items-center' } %>
        <span class="check-icon"></span>
      </div>

      <div class="form-group">
        <%= f.input :event_date, input_html: { class: 'date-input', title: 'Enter your password', type: 'password' }, wrapper_html: { class: 'd-flex flex-column align-items-center' }, order: [:day, :month, :year] %>
        <span class="check-icon"></span>
      </div>

      <div class="form-group">
        <%= f.input :period, collection: Event::PERIOD, input_html: { class: 'w-100', title: 'Enter your password', type: 'password' }, wrapper_html: { class: 'd-flex flex-column align-items-center' } %>
        <span class="check-icon"></span>
      </div>

      <div class="form-group">
        <%= f.input :photo, as: :file, input_html: { class: 'w-100' }, wrapper_html: { class: 'd-flex flex-column align-items-center' } %>
        <span class="check-icon"></span>
      </div>

      <div class="form-group">
        <%= f.button :submit, 'Submit', class: 'w-100', id: 'submit' %>
      </div>
    <% end %>
  </div>
</div>
