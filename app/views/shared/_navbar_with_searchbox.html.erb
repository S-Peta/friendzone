<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%="fixed-top" if @fixed%>" data-navbar-target="nav">
  <div class="container-fluid">
    <%= link_to events_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>



    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Current Events", participants_path, class: "nav-link" %>
          </li>

            <%= form_with url: filter_events_path, method: :get, class: "d-flex flex-column" do %>
             <%= text_field_tag :name,
               params[:name],
               class: "form-control",
               style: "width: 300px",
               placeholder: "Type a keyword"
              %>
              <%= submit_tag "Search", name: "", class:"btn btn-outline-light w-100 mt-3" %>
            <% end %>

          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.photo.key.present? %>
              <%= cl_image_tag current_user.photo.key , class: "avatar", alt: "dropdown menu" %>
            <% else %>
              <%= image_tag "default-user-pic.jpg" , class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "New Event", new_event_path , class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
